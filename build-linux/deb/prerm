#!/bin/sh

set -e

if [ "$1" = "remove" ]; then  # remove-only; not upgrade.
    # Stop daemon
    service pdagent stop

    # Unregister daemon
    update-rc.d -f pdagent remove

    # Clean up module .pyc
    if which update-python-modules >/dev/null 2>&1; then
        update-python-modules -c python-pdagent.public
    fi
fi

exit 0
